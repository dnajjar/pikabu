require 'pry'
require 'pry'

class IngredientsController < ApplicationController
  def new
    @ingredient = Ingredient.new
  end 


  def show
    ##WHY DO WE DO THIS HERE AND NOT IN BLOGS LAB
    @ingredient = Ingredient.find(params[:id])
    #binding.pry
  end 
  
  def edit
    #binding.pry
    @ingredient = Ingredient.find(params[:id])
    
  end

  def create
    #binding.pry
    @ingredient = Ingredient.new(name: paras["ingredient"]["name"])
    @ingredient.save
    redirect_to @ingredient
  #   format.html { redirect_to @ingredient, notice: 'Post was successfully created.' }
  end
  def update
    #binding.pry
    @ingredient = Ingredient.find(params[:id])
    @ingredient.update(name: params[:ingredient][:name])
    redirect_to @ingredient
  end 



end
  binding.pry
